# Mode (development | production)
NODE_ENV=development

# Serveur
PORT=3000
HOST=localhost

# Base de données MySQL
DB_HOST=localhost
DB_PORT=3306
DB_NAME=magny_fc_78
DB_USER=root
DB_PASSWORD=your_secure_password
#abGa9yv6s9QEes8

# JWT - Générez une clé secrète forte (min 64 caractères)
# Utilisez: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_min_64_characters_long_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_COOKIE_EXPIRES_IN=7

# Refresh Token
REFRESH_TOKEN_SECRET=another_super_secret_key_for_refresh_tokens_change_this_too
REFRESH_TOKEN_EXPIRES_IN=30d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS - Domaines autorisés (séparés par des virgules)
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=debug

# Email (pour les notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@magnyfc78.fr

# Sécurité
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your_session_secret_key
